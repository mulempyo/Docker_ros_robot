<?xml version="1.0"?>
<robot name="KWJBot" xmlns:xacro="http://ros.org/wiki/xacro">
    <xacro:include filename="$(find kwj_description)/urdf/kwj.gazebo.xacro"/>

    <link name="base_footprint"/>

    <link name="base_link">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.35" /> 
        <inertia ixx="0.00178" ixy="0" ixz="0"
                 iyy="0.00178" iyz="0"
                 izz="0.00178" />
        </inertial>

      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.155 0.2 0.15"/>
        </geometry>
      </collision>

      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://kwj_description/meshes/base_link.stl" scale="1.0 1.0 1.0"/>
        </geometry>
        <material name="grey">
          <color rgba="0.5 0.5 0.5 1"/>
        </material>
      </visual>
    </link>

    <joint name="base_joint" type="fixed">
         <parent link="base_footprint"/>
         <child link="base_link"/>
         <origin xyz="0 0 0.065" rpy="0 0 0"/> 
      </joint>

    <joint name="camera_joint" type="fixed">
      <parent link="base_link"/>
      <child link="camera_link"/>
      <origin xyz="0.15 0 0.05" rpy="0 0 0"/> 
    </joint>

    <link name="camera_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
         <box size="0.03 0.085 0.025"/> 
        </geometry>
        <material name="black"/>
      </visual>
      <collision>
        <origin xyz="0.015 0 -0.0065" rpy="0 0 0"/>
        <geometry>
          <box size="0.05 0.05 0.025"/> 
        </geometry>
      </collision>
      <inertial>
        <mass value="0.072"/> 
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <inertia ixx="0.00005235" iyy="0.00005235" izz="0.00005235" ixy="0" ixz="0" iyz="0"/>
      </inertial>
    </link>

     <joint name="wheel_left_joint" type="continuous">
      <parent link="base_link"/>
      <child link="wheel_left_link"/>
      <origin xyz="-0.0355 0.106 -0.0515" rpy="-1.57 0 0"/>
      <axis xyz="0 0 1"/>
     </joint>

     <link name="wheel_left_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 1.57"/>
          <geometry>
           <cylinder length="0.026" radius="0.0335"/>
          </geometry>
        <material name="dark"/>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder length="0.026" radius="0.0335"/>
        </geometry>
      </collision>

      <inertial>
        <origin xyz="0 0 0" />
        <mass value="1.2" />
        <inertia ixx="0.00020535" ixy="0" ixz="0"
                 iyy="0.00020535" iyz="0"
                 izz="0.00020535" />
        </inertial>
    </link>

     <joint name="wheel_right_joint" type="continuous">
      <parent link="base_link"/>
      <child link="wheel_right_link"/>
      <origin xyz="-0.0355 -0.106 -0.0515" rpy="-1.57 0 0"/>
      <axis xyz="0 0 1"/>
     </joint>

     <link name="wheel_right_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 1.57"/>
         <geometry>
           <cylinder length="0.026" radius="0.0335"/>
         </geometry>
        <material name="dark"/>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder length="0.026" radius="0.0335"/>
        </geometry>
      </collision>

      <inertial>
        <origin xyz="0 0 0" />
        <mass value="1.2" />
        <inertia ixx="0.00020535" ixy="0" ixz="0"
                 iyy="0.00020535" iyz="0"
                 izz="0.00020535" />
        </inertial>
    </link> 

    <joint name="caster_front_joint" type="fixed">
      <parent link="base_link"/>
      <child link="caster_front_link"/>
      <origin xyz="0.1 0 -0.07" rpy="-1.57 0 0"/>
    </joint>

    <link name="caster_front_link">

      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
         <geometry>
           <cylinder length="0.015" radius="0.0175"/>
         </geometry>
        <material name="dark"/>
      </visual>

      <collision>
        <origin xyz="0 0.001 0" rpy="0 0 0"/>
        <geometry>
          <cylinder length="0.016" radius="0.015"/>
        </geometry>
      </collision>

      <inertial>
        <origin xyz="0 0 0" />
        <mass value="0.022" />
        <inertia ixx="0.00000336875" ixy="0" ixz="0"
                 iyy="0.00000336875" iyz="0"
                 izz="0.00000336875" />
      </inertial>
    </link>

     <joint name="imu_joint" type="fixed">
      <parent link="base_link"/>
      <child link="imu_link"/>
      <origin xyz="-0.07 0 0" rpy="0 0 0"/>
     </joint>

     <link name="imu_link"/>
    
     <joint name="scan_joint" type="fixed">
      <parent link="base_link"/>
      <child link="laser_link"/>
      <origin xyz="0.11 0 0.18" rpy="0 0 0"/>
     </joint>

     <link name="laser_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
          <geometry>
           <cylinder length="0.0105" radius="0.03435"/>
        </geometry>
        <material name="dark"/>
      </visual>

      <collision>
        <origin xyz="-0.015 0 -0.0065" rpy="0 0 0"/>
        <geometry>
          <cylinder length="0.0105" radius="0.03435"/>
        </geometry>
      </collision>

      <inertial>
        <mass value="0.178" />
        <origin xyz="0 0 0" />
        <inertia ixx="0.0002225" ixy="0.0" ixz="0.0"
                 iyy="0.0002225" iyz="0.0"
                 izz="0.0002225" />
      </inertial>
    </link>

</robot>

